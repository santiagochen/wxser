
<view class="section">
  
  <!--lego-->
  <view class="columns">
  <view class="column has-text-grey is-size-6"><text>1.1 lego 水平(宽度控制参考column)</text></view>
  </view>
  <view class="lego is-ancestor">
    <block wx:for="{{var_item}}" wx:for-index="idx" wx:for-item="item">
    <view class="lego has-text-grey-light is-size-6 has-text-centered">
      <view class="wrap">
        <text>+</text>
      </view>
    </view>
    </block>
  </view>

  <view class="columns">
  <view class="column has-text-grey is-size-6"><text>1.2 lego 垂直(is-verticle)</text></view>
  </view>
  <view class="lego is-ancestor is-vertical">
    <block wx:for="{{var_item}}" wx:for-index="idx" wx:for-item="item">
    <view class="lego is-4 has-text-grey-light is-size-6 has-text-centered">
      <view class="wrap">
        <text>+</text>
      </view>
    </view>
    </block>
  </view>

  <view class="columns">
  <view class="column has-text-grey is-size-6"><text>1.3 lego 混合(is-ancestor>is-parent>is-child)</text></view>
  </view>
  <view class="lego is-ancestor has-text-grey-light is-size-6 has-text-centered">
    
    <view class="lego is-3">
      <view class="lego is-parent">
        <view class="lego is-child">
          <view class="wrap"><text>+</text></view>
        </view>
        <view class="lego is-child">
          <view class="wrap"><text>+</text></view>
        </view>
      </view>
    </view>
    <view class="lego is-2">
      <view class="lego is-parent">
        <view class="lego is-child">
          <view class="wrap"><text>+</text></view>
        </view>
      </view>
    </view>
    <view class="lego is-7">
      <view class="lego is-parent is-vertical">
        <view class="lego is-child">
          <view class="wrap"><text>+</text></view>
        </view>
        <view class="lego is-child">
          <view class="wrap"><text>+</text></view>
        </view>
        <view class="lego is-child">
          <view class="wrap"><text>+</text></view>
        </view>
      </view>
    </view>
    
  </view>

</view>

